{
  "extends": "./src/_out/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "paths": {
      "#src/*": ["src/*"]
    },
    "rootDir": "./src"
  },
  "exclude": [".next", "bin", "dist", "node_modules", "webpack.config.ts"],
  "include": ["**/*.ts", "**/*.tsx"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    },
    "require": ["tsconfig-paths/register"]
  }
}
